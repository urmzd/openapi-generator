[project]
name = "{{ name }}"
version = "0.1.0"
description = "Auto-generated FastAPI server"
requires-python = ">=3.11"
dependencies = [
    "fastapi>=0.115",
    "uvicorn[standard]>=0.34",
]
{% if pytest or ruff %}

[dependency-groups]
dev = [
{% if pytest %}
    "pytest>=8.0",
    "pytest-asyncio>=0.24",
    "httpx>=0.27",
{% endif %}
{% if ruff %}
    "ruff>=0.9",
{% endif %}
]
{% endif %}
{% if pytest %}

[tool.pytest.ini_options]
asyncio_mode = "auto"
{% endif %}
