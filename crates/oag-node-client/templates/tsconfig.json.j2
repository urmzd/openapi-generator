{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
{% if react %}
    "jsx": "react-jsx",
{% endif %}
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"]
}
